<section>
    <p>Glide To Reveal Secret Code</p>
    <ul class="code" id="secret-code">
        <!-- Los números serán generados por JavaScript -->
    </ul>
</section>

<script>
    // Código secreto para cada día del mes (1 a 30)
    const secretCodes = [
        "123", "456", "789", "234", "567", 
        "890", "135", "246", "357", "468", 
        "579", "680", "791", "802", "913", 
        "024", "135", "246", "357", "468", 
        "579", "680", "791", "802", "913", 
        "024", "135", "246", "357", "468", 
        "579", "680", "791", "802"
    ];

    // Obtener el día actual
    const today = new Date().getDate();

    // Crear elementos de lista para el código secreto del día actual
    const secretCodeList = document.getElementById('secret-code');
    const todayCode = secretCodes[today - 1] || "No code"; // Si no hay código, mostrar "No code"

    todayCode.split('').forEach(digit => {
        const li = document.createElement('li');
        li.tabIndex = 0; // Hacer el elemento enfocable
        li.classList.add('digit');
        li.innerHTML = `<span>${digit}</span>`;
        secretCodeList.appendChild(li);
    });
</script>
</body>
